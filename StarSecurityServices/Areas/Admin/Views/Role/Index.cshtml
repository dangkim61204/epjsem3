@model IEnumerable<StarSecurityServices.Models.Role>

@{
    ViewData["Title"] = "Role";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Striped columns</h4>


            </div><!-- end card header -->

            <div class="card-body">

                <p>
                    <a asp-action="Create" class="btn btn-success">Create</a>
                </p>
                <div class="live-preview">
                    <div class="table-responsive table-card">
                        <table class="table align-middle table-nowrap table-striped-columns mb-0">
                            <thead class="table-light">
                                <tr>

                                    <th>ID</th>
                                    <th>Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="#" class="fw-medium">@item.Id</a></td>
                                        <td>@item.Name</td>

                                        <td>
                                            
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete the Role?')">Delete</a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div><!-- end card -->
        </div><!-- end col -->
    </div><!-- end row -->

</div>
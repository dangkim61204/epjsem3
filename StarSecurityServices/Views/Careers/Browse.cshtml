@{
	Layout = "~/Views/Shared/_LayoutPages.cshtml";
}
<div class="container">
	<div class="row">
		<div class="utf-companies-list-aera">
			<div class="col-xl-12">
				<div class="row">
					@foreach(var item in Model)
					{
						<div class="col-xl-4 col-md-6 col-sm-12">
							<div class="utf-company-inner-alignment">
								<a asp-action="Details" asp-controller="Careers" asp-route-id="@item.Id" class="company">
									<h4>@item.Title</h4>
									<h5 class="utf-job-listing-company"><span><i class="icon-feather-briefcase"></i> @(item.Status ? "Are recruiting" : "Recruitment is over")</span></h5>
									<p class="text-muted"><i class="icon-material-outline-access-time"></i>@item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")</p>
									<div class="utf-star-rating" data-rating="4.5"></div>
								</a>
							</div>
						</div>
					}
					
					
				</div>
			</div>
			<!-- Pagination -->
            <div class="clearfix"></div>
            <div class="utf-pagination-container-aera margin-top-20 margin-bottom-40">
                <nav class="pagination">
                    <ul>
                        <!-- Previous page -->
                        <li class="utf-pagination-arrow">
                            <a href="@Url.Action("Browse", new { pageNumber = ViewBag.PageNumber - 1, pageSize = ViewBag.PageSize })" class="ripple-effect @((ViewBag.PageNumber == 1) ? "disabled" : "")">
                                <i class="icon-material-outline-keyboard-arrow-left"></i>
                            </a>
                        </li>

                        <!-- Page number links -->
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="@(i == ViewBag.PageNumber ? "current-page" : "")">
                                <a href="@Url.Action("Browse", new { pageNumber = i, pageSize = ViewBag.PageSize })" class="ripple-effect">
                                    @i
                                </a>
                            </li>
                        }

                        <!-- Next page -->
                        <li class="utf-pagination-arrow">
                            <a href="@Url.Action("Browse", new { pageNumber = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize })" class="ripple-effect @((ViewBag.PageNumber == ViewBag.TotalPages) ? "disabled" : "")">
                                <i class="icon-material-outline-keyboard-arrow-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="clearfix"></div>

		</div>
	</div>
</div>